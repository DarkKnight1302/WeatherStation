<Page
    x:Class="WeatherStation.MainPage"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherStation"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="GridStyle1" TargetType="Grid"/>
    </Page.Resources>

    <Grid BorderThickness="1,1,1,1">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/beautiful-weather.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition
                    Height="Auto" />
            <RowDefinition
                    Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="Transparent">
                    <TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" Text="Weather Station" VerticalAlignment="Top" RequestedTheme="Default" FontSize="72" FontFamily="Calibri Light" FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="1" Margin="0,200,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    x:Name="ColumnOne"
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Orientation="Vertical" Margin="0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="White">
                        <TextBlock
                    x:Name="FavWeather"
                    Text="Set your favourite weather"
                    HorizontalAlignment="Center"
                    FontSize="36" FontFamily="Bahnschrift"
                    />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="Transparent">
                        <ToggleSwitch IsOn="{x:Bind ViewModel.ToggleSwitchOn, Mode=TwoWay}"
                              OffContent="Enable Favourite Weather Notifications"
                              OnContent="Favourite Weather Notifications Enabled"
                              Margin="0,10"
                              HorizontalAlignment="Center" FontWeight="Bold"></ToggleSwitch>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="{x:Bind ViewModel.ToggleSwitchOn, Mode=OneWay}" Margin="0,25">
                    <TextBlock
                        Text="Weather State : " FontFamily="Corbel Light" FontSize="20"  FontWeight="SemiBold" Margin="0,20"
                        />
                    <ComboBox x:Name="WeatherState" Header="Select State" ItemsSource="{x:Bind ViewModel.WeatherConditions, Mode=TwoWay}" 
                                    Margin="10,-5,0,0" SelectionChanged="ComboBox_SelectionChanged" SelectedIndex="0"/>
                   
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="{x:Bind ViewModel.ToggleSwitchOn, Mode=OneWay}">
                    <Border Background="Transparent">
                        <TextBlock
                        Text="Temperature in °C : " FontFamily="Corbel Light" FontSize="20" Margin="0,25" FontWeight="SemiBold"
                        />
                    </Border>
                    <muxc:NumberBox Header="Min temperature" Value="{x:Bind ViewModel.inputTemperatureMin, Mode=TwoWay}" 
                                    PlaceholderText="degree celsius" Margin="10,0,0,0"/>
                    <TextBlock
                        Text="To" FontFamily="Corbel Light" FontSize="22" Margin="25"
                        />
                    <muxc:NumberBox Header="Max temperature" Value="{x:Bind ViewModel.inputTemperatureMax, Mode=TwoWay}" 
                                    PlaceholderText="degree celsius" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="{x:Bind ViewModel.ToggleSwitchOn, Mode=OneWay}">
                    <Border Background="Transparent">
                        <TextBlock
                        Text="Humidity % : " FontFamily="Corbel Light" FontSize="20" Margin="0,25" FontWeight="SemiBold"
                             Visibility="{x:Bind ViewModel.ToggleSwitchOn, Mode=OneWay}"
                        />
                    </Border>
                    <muxc:NumberBox Header="Min Humidity" Value="{x:Bind ViewModel.inputHumidityMin, Mode=TwoWay}" 
                                    PlaceholderText="percent" Margin="10,0,0,0" Maximum="100" Minimum="0"/>
                    <TextBlock
                        Text="To" FontFamily="Corbel Light" FontSize="22" Margin="25"
                        />
                    <muxc:NumberBox Header="Max humidity" Value="{x:Bind ViewModel.inputHumidityMax, Mode=TwoWay}" 
                                    PlaceholderText="percent" Margin="5,0,0,0" Maximum="100" Minimum="0"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Orientation="Vertical" Margin="50,0">
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Border Background="White">
                        <TextBlock
                    x:Name="Temperature"
                    Text="Current Weather -"
                    HorizontalAlignment="Left"
                    FontSize="36" FontFamily="Bahnschrift"
                    />
                    </Border>
                    <Border Background="White">
                        <TextBlock
                        Text="{x:Bind ViewModel.WeatherDesc, Mode=OneWay}"
                        FontFamily="Bahnschrift" FontSize="36" Foreground="Gray"
                        Margin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Border Background="Azure">
                        <TextBlock
                        Text="Temperature : " FontFamily="Corbel Light" FontSize="22"
                        />
                    </Border>
                    <Border Background="Azure">
                        <TextBlock
                        Text="{x:Bind ViewModel.Temperature, Mode=OneWay}"
                        FontFamily="Calibri Light" FontSize="22" Foreground="Gray"
                        Margin="10,0,0,0"
                        />
                    </Border>
                    <Border Background="Azure">
                        <TextBlock
                        Text="°C"
                        FontFamily="Candara Light" FontSize="22" IsColorFontEnabled="True" Foreground="Gray"
                        Margin="10,0,0,0" FontStyle="Italic"
                        />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Border Background="Azure">
                        <TextBlock
                        Text="Temperature feels like : " FontFamily="Corbel Light" FontSize="22"
                        />
                    </Border>
                    <Border Background="Azure">
                        <TextBlock
                        Text="{x:Bind ViewModel.TemperatureFeelsLike, Mode=OneWay}"
                        FontFamily="Calibri Light" FontSize="22" Foreground="Gray"
                        Margin="10,0,0,0"
                        />
                    </Border>
                    <Border Background="Azure">
                        <TextBlock
                        Text="degree Celcius"
                        FontFamily="Candara Light" FontSize="22" IsColorFontEnabled="True" Foreground="Gray"
                        Margin="10,0,0,0" FontStyle="Italic"
                        />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Border Background="Azure">
                        <TextBlock
                        Text="Humidity : " FontFamily="Corbel Light" FontSize="22"
                        />
                    </Border>
                    <Border Background="Azure">
                        <TextBlock
                        Text="{x:Bind ViewModel.Humidity, Mode=OneWay}"
                        FontFamily="Calibri Light" FontSize="22" Foreground="Gray"
                        Margin="10,0,0,0"
                        />
                    </Border>
                    <Border Background="Azure">
                        <TextBlock
                        Text="%"
                        FontFamily="Candara Light" FontSize="22" IsColorFontEnabled="True" Foreground="Gray"
                        Margin="10,0,0,0" FontStyle="Italic"
                        />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Border Background="Transparent">
                        <TextBlock
                        Text="Wind Speed : " FontFamily="Corbel Light" FontSize="22" FontWeight="SemiBold"
                        />
                    </Border>
                    <Border Background="Transparent">
                        <TextBlock
                        Text="{x:Bind ViewModel.WindSpeed, Mode=OneWay}"
                        FontFamily="Calibri Light" FontSize="22" FontWeight="Medium"
                        Margin="10,0,0,0"
                        />
                    </Border>
                    <Border Background="Transparent">
                        <TextBlock
                        Text="meter per second"
                        FontFamily="Candara Light" FontSize="22" IsColorFontEnabled="True" FontWeight="Medium"
                        Margin="10,0,0,0" FontStyle="Italic"
                        />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Border Background="Transparent">
                        <TextBlock
                        Text="Cloudiness : " FontFamily="Corbel Light" FontSize="22" FontWeight="SemiBold"
                        />
                    </Border>
                    <Border Background="Transparent">
                        <TextBlock
                        Text="{x:Bind ViewModel.Cloudiness, Mode=OneWay}"
                        FontFamily="Calibri Light" FontSize="22"  FontWeight="Medium"
                        Margin="10,0,0,0"
                        />
                    </Border>
                    <Border Background="Transparent">
                        <TextBlock
                        Text="%"
                        FontFamily="Candara Light" FontSize="22" IsColorFontEnabled="True"  FontWeight="Medium"
                        Margin="10,0,0,0" FontStyle="Italic"
                        />
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
